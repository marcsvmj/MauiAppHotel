<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Página_Inicial"
             Title="Cyrion Hospedagens"
             BackgroundColor="Beige"
             BackgroundImageSource="dotnet_for.png">
    
    <VerticalStackLayout>
        <Label 
            Text="Bem Vindo(a) ao App de Contratação e Hospedagem!"
            FontAttributes="Bold"
            FontSize="25"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            TextColor="DarkGreen"/>

        <Label 
            Text=" "
            FontSize="291"/>

        <Button x:Name="btEntrar"
                Text="Entrar"
                Padding="10"
                TextColor="Beige"
                BackgroundColor="DarkGreen"
                Clicked="btEntrar_Clicked" />

    </VerticalStackLayout>
</ContentPage>